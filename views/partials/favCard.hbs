<div class="card-container" id="{{tool.id}}">
  <div class="tool-image">
    <img width="350px" src={{tool.imageFile}} alt={{tool.name}}/>
  </div>
  <div class="tool-header">
    <div class="tool-header-content">
      <h4 class="tool-name">{{tool.name}}</h4>
    </div>
    <div class="tool-header-content">
      <a href="/lists/{{_id}}/fav" class="nav__link active-link" id="none-tool-btn"><i class='bx bx-bookmark-heart nav__icon'></i></a>
      </a>
    </div>    
  </div>
  <div class="tool-description-box">
    <p>{{tool.description}}</p>
    <p>Uploaded by: {{user.username}} </p> {{!-- doesnt populate correctly second level --}}
    <div class="tool-link">
      <a class="submit-btn-small" href={{tool.url}}>Check Website</a>
    </div>
    <div class="tool-link">
      <a class="submit-btn-small" href="/tools/{{_id}}">View details</a>
    </div>
  </div> 
</div>
