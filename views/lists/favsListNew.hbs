<nav id="nav-bar" class="scrolled">
  <a href="/lists"><h2><i class='bx bx-chevron-left back__icon'></i>Add New List</h2></a>
</nav>
<div class="form-container-lists">
  <form  class="list" action="/lists/new" method="POST">
    <div class="input-group">
      <input required type="text" name="listName" placeholder="My List Name" autocomplete="off" class="input"/>
      <label class="user-label">List Name</label>
    </div>
    <div class="input-group">
      <p class="tag-label">Select a cover image</p>
      <input id="file-upload" type="file" name="image" accept="image/jpeg, image/png, image/jpg">
    </div> 
    <button type="submit" class="submit-btn">Create List</button>
  </form>
</div>