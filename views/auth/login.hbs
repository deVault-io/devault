<div class="form-container-login">
  <h2>Login into your account!</h2>
  <form class="login" action="/auth/login" method="POST">
  <div class="input-group">
    <input required="true" type="email" name="email" autocomplete="off" class="input">
    <label class="user-label">Email</label>
  </div>
  <div class="input-group">
    <input required="true" type="password" name="password" autocomplete="off" class="input">
    <label class="user-label">Password</label>
  </div>
  <button type="submit" class="submit-btn">Login</button>
    {{#if error}}
      <p style="color:rgb(218, 90, 90)">{{ error }}</p>
    {{/if}}
  </form>
  <img src="https://i.imgur.com/PedNfwz.png" alt="" class="form-logo">
</div>
  
  
