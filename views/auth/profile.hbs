<div class="profile-container">
  <form  class="login" action="/profile/editAvatar" method="POST" enctype="multipart/form-data">
  <div class="personal-image">
    <label class="label">
      <input id="file-upload" type="file" name="image" accept="image/jpeg, image/png, image/jpg">
      <figure class="personal-figure">
        <img src={{user.image}} class="personal-avatar" alt="avatar">
        <figcaption class="personal-figcaption">
          <img src="https://raw.githubusercontent.com/ThiagoLuizNunes/angular-boilerplate/master/src/assets/imgs/camera-white.png">
        </figcaption>
      </figure>
    </label>
    <input type="submit" class="submit-btn" value="Upload Image">
  </form>
  </div>
  <p>Email: {{user.email}}</p>
  <a href="/tools/myTools">My Tools</a>
  <a href="/lists">My Library</a>
  <a href="/profile/edit">Edit profile</a>
  <a href="/profile/delete">Delete profile</a>
  <a href="/auth/logout">Logout</a>
</div>

