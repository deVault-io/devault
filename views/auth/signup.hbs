<div class="form-container-login">
  <h2>Create your account</h2>
  <form class="login" action="/auth/signup" method="POST">
  <div class="input-group">
    <input required="true" type="text" name="username" placeholder="JohnDoe88" autocomplete="off" class="input"/>
    <label class="user-label">Username</label>
  </div>
  <div class="input-group">
    <input required="true" type="email" name="email" placeholder="john@doe.com" autocomplete="off" class="input"/>
    <label class="user-label">Email address</label>
  </div>
  <div class="input-group">
    <input required="true" type="password" name="password" placeholder="********" autocomplete="off" class="input"/>
    <label class="user-label">Password</label>
  </div>
  <button type="submit" class="submit-btn">Create account</button>
    {{#if error}}
      <p style="color: red;">{{error}}</p>
    {{/if}}
  </form>
  <div class="already-user-container">
    <a href="/auth/login" class="link-text">Already have an account? Log in</a>
    <img src="https://i.imgur.com/PedNfwz.png" alt="" class="form-logo">
  </div>
</div>  
 
   
 
  
 
    
      
 
    
      
    
    
      

      